<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20sp"
    tools:context=".ForgotPasswordActivity"
    android:background="@drawable/back"
    android:alpha="0.98"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/forgotPasswordCardView"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginBottom="30sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginTop="85sp"
        android:alpha="0.89"
        app:cardCornerRadius="8dp"
        app:cardElevation="20dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/stentiga"
            android:gravity="center"
            android:text="Forgot your password?"
            android:textColor="#000000"
            android:textSize="23sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageForgotPasswordImageView"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:layout_marginTop="110dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/contacts_mail" />


                <TextView
                    android:layout_toRightOf="@+id/imageForgotPasswordImageView"
                    android:id="@+id/messageForgotPasswordTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/coda"
                    android:layout_marginTop="115dp"
                    android:layout_marginRight="10dp"
                    android:text="Enter your email. We will send you instructions on how to reset your password."
                    android:textColor="#000000"
                    android:textSize="17sp" />




        <android.support.design.widget.TextInputLayout
            android:layout_below="@+id/messageForgotPasswordTextView"
            android:id="@+id/emailForgotPasswordWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:layout_marginTop="20sp">

            <EditText
                android:id="@+id/emailForgotPasswordEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alegreya"
                android:hint="Email"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="280dp"
                android:textSize="20sp"
                android:inputType="textEmailAddress"
                android:textColor="#000000" />
        </android.support.design.widget.TextInputLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/backForgotPasswordButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="19dp"
                android:background="@drawable/rounded_button_blue"
                android:fontFamily="@font/stentiga"
                android:paddingLeft="20sp"
                android:paddingRight="20sp"
                android:layout_marginTop="330dp"
                android:text="Back"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/submitForgotPasswordButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="20dp"
                android:background="@drawable/rounded_button_blue"
                android:fontFamily="@font/stentiga"
                android:paddingLeft="20sp"
                android:paddingRight="20sp"
                android:layout_marginTop="330dp"
                android:text="Submit"
                android:textColor="#FFFFFF" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>