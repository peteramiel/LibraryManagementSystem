<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView

            android:id="@+id/bookTitleSelectedTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title"
            android:textColor="#000000"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/stentiga"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/bookAuthorSelectedTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bookTitleSelectedTextView"
            android:text="Author"
            android:fontFamily="@font/alegreya"
            android:textColor="#000000"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imageBookSelectImageView"
            android:layout_width="120dp"
            android:layout_height="180dp"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="10sp"
            android:src="@drawable/sample_book" />

        <TextView
            android:id="@+id/moreInformation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageBookSelectImageView"
            android:layout_marginTop="20dp"
            android:text="More Information"
            android:fontFamily="@font/ruda"
            android:textColor="#000000"
            android:textSize="20sp"

            />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/moreInformation"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/colorWhiteTransparent"
            app:cardCornerRadius="8dp"
            app:cardElevation="10dp"
            app:contentPadding="10dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_marginTop="10sp"
                    android:id="@+id/bookTitleSelectedTextView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title"
                    android:textColor="@color/colorPrimaryDark"
                    android:fontFamily="@font/ruda"
                    android:textSize="20sp" />

                <TextView
                    android:layout_marginTop="10sp"
                    android:layout_marginStart="20sp"
                    android:layout_below="@id/bookTitleSelectedTextView2"
                    android:id="@+id/bookAuthorSelectedTextView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Author"
                    android:fontFamily="@font/ruda"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp" />
                <TextView
                    android:layout_marginTop="10sp"
                    android:layout_marginStart="20sp"
                    android:id="@+id/cNTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Call Number"
                    android:fontFamily="@font/ruda"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:layout_below="@id/bookAuthorSelectedTextView2"
                    />
                <TextView
                    android:layout_marginTop="10sp"
                    android:layout_marginStart="20sp"
                    android:id="@+id/callNumberBookSelectTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Call Number"
                    android:fontFamily="@font/ruda"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp"
                    android:layout_below="@id/bookAuthorSelectedTextView2"
                    android:layout_toEndOf="@+id/cNTextView"
                    />
                <TextView
                    android:layout_marginTop="10sp"
                    android:layout_marginStart="20sp"
                    android:id="@+id/lTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location"
                    android:fontFamily="@font/ruda"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:layout_below="@id/cNTextView"
                    />
                <TextView
                    android:layout_marginTop="10sp"
                    android:layout_marginStart="20sp"
                    android:id="@+id/locationBookSelectTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location"
                    android:fontFamily="@font/ruda"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp"
                    android:layout_below="@id/cNTextView"
                    android:layout_toEndOf="@+id/lTextView"
                    />
                <TextView
                    android:layout_marginTop="10sp"
                    android:layout_marginStart="20sp"
                    android:id="@+id/pDateTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Publish Date"
                    android:fontFamily="@font/ruda"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:layout_below="@id/lTextView"
                    />
                <TextView
                    android:layout_marginTop="10sp"
                    android:layout_marginStart="20sp"
                    android:id="@+id/publishDateBookSelectTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="September 3 ,2015"
                    android:fontFamily="@font/ruda"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp"
                    android:layout_below="@id/lTextView"
                    android:layout_toEndOf="@+id/pDateTextView"
                    />
                <TextView
                    android:layout_marginTop="10sp"
                    android:layout_marginStart="20sp"
                    android:id="@+id/seriesTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Series"
                    android:fontFamily="@font/ruda"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:layout_below="@id/pDateTextView"
                    />
                <TextView
                    android:layout_marginTop="10sp"
                    android:layout_marginStart="20sp"
                    android:id="@+id/seriesBookSelectTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Series"
                    android:fontFamily="@font/ruda"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp"
                    android:layout_below="@id/pDateTextView"
                    android:layout_toEndOf="@+id/seriesTextView"
                    />
                <TextView
                    android:layout_marginTop="10sp"
                    android:layout_marginStart="20sp"
                    android:id="@+id/availTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Available"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:layout_below="@id/seriesTextView"
                    />
                <TextView
                    android:layout_marginTop="10sp"
                    android:layout_marginStart="20sp"
                    android:id="@+id/availableBookSelectTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Available"
                    android:fontFamily="@font/ruda"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp"
                    android:layout_below="@id/seriesTextView"
                    android:layout_toEndOf="@+id/availTextView"
                    />
            </RelativeLayout>

        </android.support.v7.widget.CardView>
    </RelativeLayout>
</ScrollView>