<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageViewProfilePicture"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@color/colorAccent"
                    android:src="@mipmap/ic_launcher"/>

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/editProfileButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="176dp"
                    android:backgroundTint="@color/colorPrimary"
                    android:clickable="true"
                    android:focusable="true"
                    app:srcCompat="@mipmap/ic_launcher"
                    tools:ignore="UnusedAttribute" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imageViewProfilePicture"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/userNameProfileTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/imageViewProfilePicture"
                        android:layout_marginTop="10dp"
                        android:text="John Doe"
                        android:textColor="#000000"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/userTypeProfileTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Student"
                        android:textColor="#d3d3d3"
                        android:textSize="12dp"
                       />
                    <TextView
                        android:id="@+id/userProgramProfileTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="BS CpE"
                        android:textColor="#000000"
                        android:textSize="18dp"
                        />
                    <TextView
                        android:id="@+id/userNumberProfileTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="2014000000"
                        android:textColor="#000000"
                        android:textSize="18dp"
                        />
                    <TextView
                        android:id="@+id/userContactProfileTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="+639123456789"
                        android:textColor="#000000"
                        android:textSize="18dp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="Unreturned Books"
                        android:textColor="@color/colorPrimary"
                        android:textSize="25dp" />

                    <ListView
                        android:id="@+id/unreturnedBooksProfileListView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Borrowed Books"
                        android:textColor="@color/colorPrimary"
                        android:textSize="25dp" />

                    <ListView
                        android:id="@+id/borrowedBooksProfileListView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <Button
                        android:id="@+id/logoutProfileButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10sp"
                        android:padding="10sp"
                        android:text="Logout"
                        />


                </LinearLayout>
            </RelativeLayout>
        </ScrollView>
    </LinearLayout>


</LinearLayout>