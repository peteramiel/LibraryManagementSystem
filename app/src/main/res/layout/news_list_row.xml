<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:id="@+id/newsListRowCardView"
    android:layout_marginTop="15sp"
    app:cardCornerRadius="12dp"
    android:layout_margin="15sp"
    app:cardElevation="10dp"
    app:cardBackgroundColor="@color/colorLightViolet"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical"
        android:padding="10sp">
        <TextView
            android:id="@+id/contentNewsListRowTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"
            android:text="Insert Some Text Here"
            />
        <ImageView
            android:id="@+id/attachmentNewsListRowImageView"
            android:layout_below="@+id/contentNewsListRowTextView"
            android:layout_width="match_parent"
            android:layout_height="160sp"
            android:src="@drawable/no_image"
            android:scaleType="fitXY"
            />
        <TextView
            android:textColor="@color/colorWhiteTransparent"
            android:id="@+id/datePostedNewsListRowTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_below="@id/attachmentNewsListRowImageView"
            android:text="Insert Date Here"
            />
    </RelativeLayout>

</android.support.v7.widget.CardView>
